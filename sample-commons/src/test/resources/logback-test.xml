<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
       		<pattern>%magenta(%-5level) %cyan(%-25logger) : %msg%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="t01.connect"    level="INFO"/>
    <logger name="t02.statements" level="INFO"/>
    <logger name="t03.repository" level="INFO"/>
    <logger name="t04.paging" 	  level="INFO"/>
    <logger name="com.datastax.driver"  level="ERROR"/>
</configuration>
